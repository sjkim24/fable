<form class="" action="<%= bookmark_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <% if method.downcase == "delete" %>
    <input type="submit" name="" value="Unbookmark">
  <% else %>
    <input type="submit" name="" value="Bookmark">
  <% end %>
</form>